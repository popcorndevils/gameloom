{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with PyInstaller",
            "type": "shell",
            "command": "pyinstaller",
            "windows": {
                "command": "${workspaceFolder}\\.venv\\Scripts\\pyinstaller"
            },
            "linux": {
                "command": "${workspaceFolder}/.venv/bin/pyinstaller"
            },
            "osx": {
                "command": "${workspaceFolder}/.venv/bin/pyinstaller"
            },
            "args": [
                "--onefile",
                "--clean",
                "main.py"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        }
    ]
}