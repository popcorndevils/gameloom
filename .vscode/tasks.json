{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with PyInstaller",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/Scripts/pyinstaller",
            "args": [
                "--onefile",
                "--name",
                "gmcopilot-${input:version}",
                "main.py"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "version",
            "type": "promptString",
            "description": "Enter the project version:"
        }
    ]
}